      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->    
{% endblock %}
{% block body %}
    <div class="container">
            {{ form_start(form, {'action': path('core_security_check'), 'method': 'POST', 'attr': {'class': 'form-signin', 'role': 'form'}  }) }}
                {% if error %}
                    <span class="alert">{{ error.message }}</span>
                {% endif %}
                <div class="loginform">
                     <div class="form-label">
                        <label for="">Matrícula</label>
                    </div>
                     {{ form_errors(form._username) }}

                     

                     <div class="form-input">{{ form_widget(form._username, {'id': '_username', 'attr': {'placeholder': ' ','autofocus': 'autofocus'}, value: last_username }) }}</div>
<div class="clearer"></div>
                     <div class="form-label">
                        <label for="">Contraseña</label>
                    </div>
                    
                    {{ form_errors(form._password) }}
                    
                    <div class="form-input">{{ form_widget(form._password, {'id': '_password',  'attr': {'placeholder': ' '} }) }}</div>
                    {{ form_widget(form.hdnUrlAjax, {'id': 'hdnUrlAjax', value: path('pucp_security_ajax') }) }}
                    {{ form_widget(form.btnLogin, {'label': 'Entrar','id': 'btnLogin', 'attr': {'class': 'btn btn-lg btn-primary btn-block'} }) }}
<div class="clearer"></div>
                </div>
                <div class="forgetpass"><a href="#">¿Olvidó su contraseña?</a></div>
            {{ form_end(form) }}
            
            
