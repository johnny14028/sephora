{# app/Resources/views/intranet.html.twig #}
{% extends '::base.html.twig' %}
{% block title %}Sephora::{{'Sign in' | trans}}{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('bundles/themedefault/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block javascripts %}
